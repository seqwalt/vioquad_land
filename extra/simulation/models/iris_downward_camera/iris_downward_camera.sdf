<?xml version="1.0" ?>
<sdf version="1.5">
  <model name='iris_downward_camera'>
    <include>
      <uri>model://iris</uri>
    </include>

    <include>
      <uri>model://monocular_camera</uri>
      <pose>0.108 0 0 0 1.5708 3.1415</pose>
    </include>
    <joint name="monocular_camera_joint" type="revolute">
      <child>monocular_camera::link</child>
      <parent>iris::base_link</parent>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <upper>0</upper>
          <lower>0</lower>
        </limit>
      </axis>
    </joint>
  </model>
</sdf>
